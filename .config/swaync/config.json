{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "top",
  "control-center-margin-top": 17,
  "control-center-margin-bottom": 17,
  "control-center-margin-right": 10,
  "control-center-margin-left": 0,
  "notification-icon-size": 48,
  "notification-body-image-height": 100,
  "notification-body-image-width": 200,
  "timeout": 10,
  "timeout-low": 5,
  "timeout-critical": 0,
  "fit-to-screen": true,
  "control-center-width": 400,
  "notification-window-width": 320,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": false,
  "hide-on-action": true,
  "script-fail-notify": true,
  "widgets": [
    "title",
    "buttons-grid",
    "notifications",
    "volume",
    "mpris"
  ],
  "widget-config": {
    "title": {
      "text": "CONTROL PANEL",
      "clear-all-button": true,
      "button-text": "CLR"
    },
    "dnd": {
      "text": "DND"
    },
    "mpris": {
      // "image-size": 60,
      // "image-radius": 0,
      "show-album-art": "when-available"
    },
    "buttons-grid": {
      "actions": [
        {
          "label":"",
          "type": "toggle",
          "command": "sh -c 'nmcli radio wifi | grep -q enabled && nmcli radio wifi off || nmcli radio wifi on'"
        },
        { 
          "label": "",
          "type": "toggle",
          "command": "rfkill toggle bluetooth"
        },
        {
          "label": "",
          "command": "systemctl reboot"
        },
        {
          "label": "",
          "command": "systemctl poweroff"
        }
      ]
    }
  }
}